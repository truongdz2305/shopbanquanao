@{
    ViewBag.Title = "Lấy Lại Mật Khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="reset-password-container">
    <h2>Lấy Lại Mật Khẩu</h2>
    @using (Html.BeginForm("ResetPassword", "Auth", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="text" name="username" placeholder="Tên Truy Cập" required />
        <input type="text" name="emailOrPhone" placeholder="Email hoặc Số Điện Thoại" required />
        <input type="password" name="newPassword" placeholder="Nhập Mật Khẩu Mới" required />
        <input type="password" name="confirmPassword" placeholder="Nhập Lại Mật Khẩu" required />
        <button type="submit">Hoàn Thành</button>

        if (ViewBag.Error != null)
        {
            <p class="error">@ViewBag.Error</p>
        }
    }
</div>

<style>
    .reset-password-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        background-color: white;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .reset-password-container h2 {
            margin-bottom: 20px;
        }

        .reset-password-container input[type="text"],
        .reset-password-container input[type="password"] {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .reset-password-container button {
            width: 100%;
            padding: 10px;
            background-color: #d32f2f;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .reset-password-container button:hover {
                background-color: #b71c1c;
            }

        .reset-password-container .error {
            color: red;
            margin: 10px 0;
        }
</style>